---
title: "Contact Page"
layout: 'base.njk'
---

<section class="contact-form">
  <h2>Contact Us</h2>
  <p>Please select your role and fill out the appropriate form.</p>

  <!-- Role Selection -->
  <div class="form-selection">
    <label>
      <input type="radio" name="form_type" value="other" onclick="showForm('other')" checked> Other
    </label>
    <label>
      <input type="radio" name="form_type" value="adopter" onclick="showForm('adopter')"> Adopter
    </label>
    <label>
      <input type="radio" name="form_type" value="volunteer" onclick="showForm('volunteer')"> Volunteer
    </label>
  </div>

  <!-- Other Form -->
  <form id="form-other" class="contact-form__content" action="/submit" method="POST">
    <h3>General Inquiry</h3>
    <label for="other-fname">First Name</label>
    <input type="text" id="other-fname" name="first_name" required>

    <label for="other-lname">Last Name</label>
    <input type="text" id="other-lname" name="last_name" required>

    <label for="other-phone">Phone</label>
    <input type="tel" id="other-phone" name="phone" required>

    <label for="other-email">Email</label>
    <input type="email" id="other-email" name="email" required>

    <label for="other-subject">Subject</label>
    <input type="text" id="other-subject" name="subject" required>

    <label for="other-message">Your Message</label>
    <textarea id="other-message" name="message" rows="6" required></textarea>

    <button type="submit">Submit</button>
  </form>

  <!-- Adopter Form -->
  <form id="form-adopter" class="contact-form__content" style="display: none;" action="/submit" method="POST">
    <h3>Adopter Form</h3>
    <label for="adopter-fname">First Name</label>
    <input type="text" id="adopter-fname" name="first_name" required>

    <label for="adopter-lname">Last Name</label>
    <input type="text" id="adopter-lname" name="last_name" required>

    <label for="adopter-phone">Phone</label>
    <input type="tel" id="adopter-phone" name="phone" required>

    <label for="adopter-email">Email</label>
    <input type="email" id="adopter-email" name="email" required>

    <label for="adopter-pet">Pet of Interest</label>
    <input type="text" id="adopter-pet" name="pet_interest" required>

    <label for="adopter-date">Visit Date</label>
    <input type="date" id="adopter-date" name="visit_date" required>

    <label for="adopter-time">Visit Time</label>
    <input type="time" id="adopter-time" name="visit_time" required>

    <label for="adopter-message">Your Message</label>
    <textarea id="adopter-message" name="message" rows="6" required></textarea>

    <button type="submit">Submit</button>
  </form>

  <!-- Volunteer Form -->
<form id="form-volunteer" class="contact-form__content" style="display: none;" action="/submit" method="POST">
  <h3>Volunteer Form</h3>
  
  <!-- First Name -->
  <label for="volunteer-fname">First Name</label>
  <input type="text" id="volunteer-fname" name="first_name" required>

  <!-- Last Name -->
  <label for="volunteer-lname">Last Name</label>
  <input type="text" id="volunteer-lname" name="last_name" required>

  <!-- Phone -->
  <label for="volunteer-phone">Phone</label>
  <input type="tel" id="volunteer-phone" name="phone" required>

  <!-- Email -->
  <label for="volunteer-email">Email</label>
  <input type="email" id="volunteer-email" name="email" required>

  <!-- Volunteer Role -->
  <label for="volunteer-role">Volunteer Role</label>
  <input type="text" id="volunteer-role" name="volunteer_role" placeholder="e.g., Animal Care, Admin Help" required>

  <!-- Available Date -->
  <label for="volunteer-date">Available Date</label>
  <input type="date" id="volunteer-date" name="available_date" required>

  <!-- Available Time -->
  <fieldset>
    <legend>Available Time</legend>
    <label for="volunteer-start-time">Start Time</label>
    <input type="time" id="volunteer-start-time" name="start_time" required>

    <label for="volunteer-end-time">End Time</label>
    <input type="time" id="volunteer-end-time" name="end_time" required>
  </fieldset>

  <!-- Message -->
  <label for="volunteer-message">Your Message</label>
  <textarea id="volunteer-message" name="message" rows="6" required></textarea>

  <!-- Submit Button -->
  <button type="submit">Submit</button>
</form>

</section>

<!-- JavaScript to Toggle Forms -->
<script>
  function showForm(formType) {
    document.getElementById("form-other").style.display = "none";
    document.getElementById("form-adopter").style.display = "none";
    document.getElementById("form-volunteer").style.display = "none";
    document.getElementById(`form-${formType}`).style.display = "block";
  }
</script>
